{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
    <h1>Tableau de bord</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% if is_granted( 'IS_AUTHENTICATED_FULLY') %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de données enregistrées</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <!-- Begin Services Row 2 -->
    <div class="row services-row services-row-tail services-row-2">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="services-group wow animated fadeInLeft animated" data-wow-offset="40" style="visibility: visible; animation-name: fadeInLeft;">
                <h4 class="services-title">Dernières annonces ajoutées</h4>
                <ul class="services-body">
                    {% for annonce in annonces %}
                    <li>{{ annonce.titleAnnonce }}</li>
                    {% endfor %}
                </ul>
                <p class="services-more"><a href="{{ path('annonces_user') }}">Voir toute la liste entière</a></p>
            </div>
        </div>
    </div>
    <!-- End Serivces Row 2 -->

{% endblock %}