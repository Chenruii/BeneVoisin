{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}

    <section id="services" class="services-section section-global-wrapper">
        <div class="container">
            <div class="row">
                <div class="services-header">
                    <h3 class="services-header-title">Liste des annonces</h3>
                    <p class="services-header-body"><em> To fish peach or not to peach fish </em>  </p><hr>
                </div>
            </div>

            <!-- Begin Services Row 1 -->
            <div class="row services-row services-row-head services-row-1">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="services-group wow animated fadeInLeft animated" data-wow-offset="40" style="visibility: visible; animation-name: fadeInLeft;">
                        <p class="services-icon"><span class="fa fa-android fa-5x"></span></p>
                        <h4 class="services-title">Annonce</h4>
                        {% for annonce in annonces %}
                        <p class="services-body">Titre: {{ annonce.title }} <br>{{ annonce.content }}<br>{{ annonce.author }}</p>
                        {% else %}
                        <p class="services-body">Aucun donn√©e</p>
                            <br>
                            <p class="services-more"><a href="{{ path('annonce_show', {'id': annonce.id}) }}">Voir</a></p>
                            <p class="services-more"><a href="{{ path('annonce_edit', {'id': annonce.id}) }}">Editer</a></p>
                        {% endfor %}

                    </div>
                    <p class="services-more"><a href="{{ path('annonce_new') }}">Ajouter une annonce</a></p>
                </div>
            </div>
            <!-- End Serivces Row 1 -->


        </div>
    </section>
{% endblock %}
