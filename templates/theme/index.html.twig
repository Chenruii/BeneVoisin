{% extends 'base.html.twig' %}

{% block title %}Theme index{% endblock %}

{% block body %}
    <section id="services" class="services-section section-global-wrapper">
        <div class="container">
            <div class="row">
                <div class="services-header">
                    <h3 class="services-header-title">Liste des themes</h3>
                    <p class="services-header-body"><em> To fish peach or not to peach fish </em>  </p><hr>
                </div>
            </div>

            <!-- Begin Services Row 1 -->
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    {% for theme in themes %}
                    <div class="services-group wow animated zoomIn animated" data-wow-offset="40" style="visibility: visible; animation-name: zoomIn;">
                        <p class="services-icon"><i class="fa fa-apple fa-5x"></i></p>
                        <h4 class="services-title">Theme</h4>

                            <p class="services-body">Titre:{{ theme.title }} <br>Description: {{ theme.description }}</p>
                        {% else %}
                            <p class="services-body">Aucun donn√©e</p>
                            <br>
                        {% endfor %}
                        <p class="services-more"> <a href="{{ path('theme_new') }}">Ajouter un nouveau theme</a></p>
                    </div>
                </div>
            </div>
            <!-- End Serivces Row 1 -->
    </section>
{% endblock %}
