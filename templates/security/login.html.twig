{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            <ul class="list-unstyled mb-0">
                <li><span class="initialism form-error-icon badge badge-danger">Une erreur est apparue</span>
                    <span class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </li>
            </ul>
        </div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.submit) }}
    <a href="{{ path("reset_password") }}" class="btn btn-danger btn-rounded">RÃ©initialiser le mot de passe </a>
    {{ form_end(form) }}
{% endblock %}

