{% extends 'base.html.twig'%}

{% block title %}Rechercher une annonce{% endblock %}

{% block content %}

<h1>Votre recherche</h1>

<div class="form-group">
    {% form_theme searchForm 'bootstrap_4_layout.html.twig' %}
    {{ form_start(searchForm) }}
    {{ form_row(searchForm.title, {'label': " ", 'attr': {'placeholder': 'mot clé...'}}) }}
    <button class="btn btn-primary">rechercher</button>
    {{ form_end(searchForm) }}


    <section id="content">

        {% for post in posts %}
            <article>
                <div class="card border-light mb-3" id="articlesRecents" style="max-width: 25rem;margin:1.5em;">
                    <div class="card-header">

                        <h3>{{ post.titlePost }}</h3>

                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Date de l'annonce: le {{ post.dateEvent | date('d/m/Y') }}
{#                            ayant pour thème: {{ post.theme.titleTheme }}#}
                         </h4>
                        <p class="card-text">

                            {{ post.descriptionPost | slice(0, 170) | raw }} ...

                        </p>
                        <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </div>
            </article>
        {% endfor %}

    </section>


    <div class="pagination">
        {{ knp_pagination_render(posts) }}
    </div>

    {% endblock %}

